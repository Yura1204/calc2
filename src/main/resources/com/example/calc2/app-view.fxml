<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.calc2.controller.ButtonController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="inputField" promptText="Enter your expression" editable="false" styleClass="text-field"/>
    <GridPane hgap="10" vgap="10">

        <Button text="7" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="8" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="9" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="/" GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="button-operator" onAction="#onOperatorButtonClick"/>

        <Button text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="*" GridPane.columnIndex="3" GridPane.rowIndex="1" styleClass="button-operator" onAction="#onOperatorButtonClick"/>

        <Button text="1" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" styleClass="button-operator" onAction="#onOperatorButtonClick"/>

        <Button text="0" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="button-number" onAction="#onNumberButtonClick"/>
        <Button text="(" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="button-operator" onAction="#onSymbolButtonClick"/>
        <Button text=")" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="button-operator" onAction="#onSymbolButtonClick"/>
        <Button text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" styleClass="button-operator" onAction="#onOperatorButtonClick"/>

        <Button text="C" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" styleClass="button-operator" onAction="#onClearButtonClick"/>
        <Button text="CE" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="button-operator" onAction="#onBackspaceButtonClick"/>
        <Button text="." GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="button-operator" onAction="#onSymbolButtonClick"/>
        <Button text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.columnSpan="4" styleClass="equals-button" onAction="#onEqualsButtonClick"/>

    </GridPane>
</VBox>
